<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!--  ID external order -->
    <TextView
        android:id="@+id/tvExternalID"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:background="@color/shadowdrawer"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--  GPS recuperacion de pago  -->
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/payment_recovery_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/ibMap"
                    android:src="@drawable/ic_pin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>
                <com.google.android.gms.maps.MapView
                    android:visibility="gone"
                    android:id="@+id/mapLocation"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>

            <!-- ¿Contactó al cliente?-->
            <LinearLayout
                android:id="@+id/llContactoCliente"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvContactoCliente"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/contacted_client"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/rgContactoCliente"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rbSiContacto"
                        android:text="@string/yes"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rbNoContacto"
                        android:text="@string/not"
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rbAclaración"
                        android:text="@string/aclaracion"
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <!-- Resultado de la gestión -->
            <LinearLayout
                android:id="@+id/llResultadoGestion"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvResultadoGestion"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/management_result"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/rgResultadoPago"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:layout_marginLeft="20dp"
                        android:id="@+id/rbPago"
                        android:text="@string/payment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:layout_marginLeft="50dp"
                        android:id="@+id/rbNoPago"
                        android:text="@string/not_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RadioGroup>
            </LinearLayout>

            <!-- Medio de pago -->
            <LinearLayout
                android:id="@+id/llMedioPago"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMedioPago"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/payment_method"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spMedioPago"
                    android:entries="@array/method_pay"
                    android:spinnerMode="dialog"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"/>
            </LinearLayout>

            <!-- Banco -->
            <LinearLayout
                android:id="@+id/llBanco"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etBanco"
                    android:focusable="false"
                    android:hint="@string/bank"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!--  Fecha de deposito   -->
            <LinearLayout
                android:id="@+id/llFechaDeposito"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/deposit_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etFechaDeposito"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="@string/deposit_date"
                    android:drawableRight="@drawable/ic_date"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!--  Monto del pago requerido  -->
            <LinearLayout
                android:id="@+id/llMontoPagoRequerido"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/amount_payment_required"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etMontoPagoRequerido"
                    android:enabled="false"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!--  ¿Cuenta con el detalle de la ficha?  -->
            <LinearLayout
                android:id="@+id/llDetalleFicha"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDetalleFicha"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/detalle_ficha"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/rgDetalleFicha"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/rbSiDetalle"
                        android:text="@string/yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/rbNoDetalle"
                        android:text="@string/not"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <!--  Integrantes del grupo  -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llIntegrantes"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:text="@string/members_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnIntegrantes"
                    android:drawableRight="@drawable/ic_group"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="@string/member"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!--  Monto del pago realizado  -->
            <LinearLayout
                android:id="@+id/llMontoPagoRealizado"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/amount_payment_made"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etPagoRealizado"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!-- ¿El monto es el correcto?-->
            <LinearLayout
                android:id="@+id/llMontoCorrecto"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvMontoCorrecto"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/monto_correcto"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/rgMontoCorrecto"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rbSiCorrecto"
                        android:text="@string/yes"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rbNoCorrecto"
                        android:text="@string/not"
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <!-- Estatus del pago -->
            <LinearLayout
                android:id="@+id/llEstatusPago"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/estatus_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etEstatusPago"
                    android:enabled="false"
                    android:hint="Estatus del pago"
                    android:paddingEnd="5dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!--  Saldo al corte  -->
            <LinearLayout
                android:id="@+id/llSaldoCorte"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/balance_cutting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@id/etSaldoCorte"
                    android:enabled="false"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!--  Saldo actual  -->
            <LinearLayout
                android:id="@+id/llSaldoActual"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/current_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etSaldoActual"
                    android:enabled="false"
                    android:hint="Calcular saldo actual"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!-- ¿Imprimir recibos?-->
            <LinearLayout
                android:id="@+id/llImprimirRecibo"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/imprimir_recibos"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/rgRecibos"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rbSiRecibo"
                        android:text="@string/yes"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rbNoRecibo"
                        android:text="@string/no_cuenta_bateria"
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <!-- Folio de recibo -->
            <LinearLayout
                android:id="@+id/llFolioRecibo"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/folio_recibo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etFolioRecibo"
                    android:enabled="false"
                    android:hint="obtener el folio del recibo impreso"
                    android:paddingEnd="5dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!-- COPIA Tomara fotografia o adjuntara desde galeria-->
            <LinearLayout
                android:id="@+id/llFotoGaleria"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/question_photo_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/ibFotoCopia"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_rounded_blue"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:src="@drawable/ic_camera" />
                    <ImageButton
                        android:id="@+id/ibGaleriaCopia"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/btn_rounded_blue"
                        android:src="@drawable/ic_attach_file" />
                </LinearLayout>
            </LinearLayout>

            <!--  Tomara fotografia o adjuntara desde galeria  -->
            <LinearLayout
                android:id="@+id/llFotoGaleriaCopia"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/question_photo_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etFotoGaleria"
                    android:focusable="false"
                    android:hint="@string/photo_gallery"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />
            </LinearLayout>

            <!-- Fotografia o Galeria Botones-->
            <LinearLayout
                android:id="@+id/llFotoGaleriaBoton"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Boton de Fotografia -->
                <LinearLayout
                    android:id="@+id/llFoto"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/blue_sidert"
                        android:text="@string/photo_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/ibFoto"
                        android:src="@drawable/ic_camera"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"/>
                </LinearLayout>

                <!-- Boton de Galeria -->
                <LinearLayout
                    android:id="@+id/llGallery"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/blue_sidert"
                        android:text="@string/attach_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/imbGallery"
                        android:src="@drawable/ic_attach_file"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"/>
                </LinearLayout>

            </LinearLayout>

            <!--  Motivo de no pago  -->
            <LinearLayout
                android:id="@+id/llMotivoNoPago"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMotivoNoPago"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/reason_no_payment"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spMotivoNoPago"
                    android:entries="@array/reason_no_pay"
                    android:spinnerMode="dialog"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"/>
            </LinearLayout>

            <!--  Información Desfasada  -->
            <LinearLayout
                android:id="@+id/llInfoDesfasada"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvInfoDesfasada"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/outdate_info"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etInfoDesfasada"
                    android:focusable="false"
                    android:hint="@string/outdate_info"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:inputType="text"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!--  Datos de defunción  -->
            <LinearLayout
                android:id="@+id/llDatosDefuncion"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/reason_death"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etMotivoDefuncion"
                    android:hint="@string/reason_death"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/date_death"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etFechaDefuncion"
                    android:hint="@string/date_death"
                    android:focusable="false"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_date"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!-- Comentario de no contacto -->
            <LinearLayout
                android:id="@+id/llComentarioNoContacto"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/no_contact_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etComentarioNoContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/et_rounded_edges"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- Comentario de aclaracion -->
            <LinearLayout
                android:id="@+id/llComentarioAclaracion"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/comentario_info_desfasada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etComentarioInfoDesfa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/et_rounded_edges"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- Especifica la causa -->
            <LinearLayout
                android:id="@+id/llEspecificaCausa"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/specify_cause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etEspecificaCausa"
                    android:hint="@string/specify_cause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/et_rounded_edges"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!--  Fotografía de fachada  -->
            <LinearLayout
                android:id="@+id/llFotoFachada"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvFotoFachada"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/facade_photo"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/ibFotoFachada"
                        android:src="@drawable/ic_camera"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="110dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Esta el gerente con usted -->
            <LinearLayout
                android:id="@+id/llEstaGerente"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvEstaGerente"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/is_manager"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    style="@android:style/Widget.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/rgEstaGerente"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/rbSiGerente"
                        android:text="@string/yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/rbNoGerente"
                        android:text="@string/not"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <!-- Firma gerente-->
            <LinearLayout
                android:id="@+id/llFirma"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/signature_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/ibFirma"
                    android:src="@drawable/ic_gesture"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/ivFirma"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />
            </LinearLayout>



            <!--  Monto promesa de pago  -->
            <LinearLayout
                android:id="@+id/llAmountPaymentPromise"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/amount_payment_promise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etAmountPaymentPromise"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:background="@drawable/et_rounded_edges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height" />
            </LinearLayout>

            <!--  Fecha de promesa de pago   -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/llPaymentPromiseDate"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/payment_promise_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPaymentPromiseDate"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="@string/payment_promise_date"
                        android:drawableRight="@drawable/ic_date"
                        android:paddingRight="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/et_rounded_edges"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/et_height" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
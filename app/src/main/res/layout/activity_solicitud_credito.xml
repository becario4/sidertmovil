<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/CLcontainer"
    android:clipChildren="false"
    android:background="@android:color/white"
    android:layout_marginStart="@dimen/paddingcl">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/TBmain"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/mTabLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="@color/colorGrayDark"
                app:tabSelectedTextColor="@android:color/white"
                app:tabIndicatorColor="@android:color/white"
                app:tabMode="scrollable"
                app:tabGravity="fill"
                app:tabMaxWidth="0dp"/>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <!--  Datos del credito 0  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:step_index="0"
                    app:step_title="Datos del Crédito"
                    app:step_state="selected">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_datos_credito"/>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <!--  Datos personales del solicitante 1  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="1"
                    app:step_title="Datos Personales del Solicitante">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_datos_personales"/>
                </moe.feng.common.stepperview.VerticalStepperItemView>

                <!--  Datos del conyuge 2  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="2"
                    app:step_title="Datos del Conyuge">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_datos_conyuge"/>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <!--  Datos economicos 3  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="3"
                    app:step_title="Datos Económicos">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_datos_economicos"/>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <!--  Datos del negocio o actividad economica 4  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="4"
                    app:step_title="Datos del Negocio o Actividad Económica">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_datos_negocio"/>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <!--  Datos del aval 5  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="5"
                    app:step_title="Datos del Aval">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_datos_aval"/>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <!--  Referencias del solicitante 6  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="6"
                    app:step_title="Referencias del Solicitante">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_referencias_solicitante"/>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <!--  Ubicacion del solicitante 7  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="7"
                    app:step_title="Ubicación del Solicitante">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_ubicacion_solicitante"/>

                </moe.feng.common.stepperview.VerticalStepperItemView>

                <!--  Verificacion domiciliaria 8  -->
                <moe.feng.common.stepperview.VerticalStepperItemView
                    android:id="@+id/stepper_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:step_index="8"
                    app:step_title="Verificación Domiciliaria"
                    app:step_is_last="true">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_step_verificacion_domiciliaria"/>

                </moe.feng.common.stepperview.VerticalStepperItemView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
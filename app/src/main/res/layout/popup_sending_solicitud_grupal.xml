<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:id="@+id/congratulation_card"
            app:cardBackgroundColor="#FAFAFA"
            app:cardElevation="0dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:text="ENVIANDO SOLICITUD DE"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/blue_sidert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Enviando integrante"
                        android:padding="10dp"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvNumIntegrante"
                        android:textStyle="bold"
                        android:text="1"
                        android:padding="10dp"
                        android:textSize="17dp"
                        android:textColor="@color/blue_sidert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="de"
                        android:textSize="17dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvTotalIntegrante"
                        android:text="10"
                        android:textSize="17dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvNombreIntegrante"
                    android:textStyle="bold"
                    android:text="FRANCISCO JAVIER LEDO FRANCISCO"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/blue_sidert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvError"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/pbSending"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/blue_sidert"
                    android:layout_gravity="center_horizontal|bottom"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivClose"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close_blue_grey_500_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>



    </FrameLayout>
</LinearLayout>
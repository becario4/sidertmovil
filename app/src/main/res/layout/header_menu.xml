<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.sidert.sidertmovil.utils.CustomRelativeLayout
        android:id="@+id/HV"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/llProfile"
            android:paddingTop="30dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bkg_navigation">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civAvatar"
                    android:paddingLeft="5dp"
                    app:civ_fill_color="@android:color/secondary_text_dark"
                    android:src="@drawable/avatar_default"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/colorGrayDark"/>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/transparen_header"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:padding="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:id="@+id/tvName"
                        android:text="Alejandro Isaias Lopez Jimenez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tvIMEI"
                        android:text="IMEI: 34567890987"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="bottom"
                    android:id="@+id/tvLastSynchronized"
                    android:text="Última sincronización: 08 de abril 17:45 om"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ImageView
                    android:id="@+id/ivLogout"
                    android:layout_gravity="right|bottom"
                    android:layout_weight="0"
                    android:src="@drawable/ic_logout_withe"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <View
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
    </com.sidert.sidertmovil.utils.CustomRelativeLayout>
</LinearLayout>
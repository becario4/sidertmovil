<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="right"
            android:textColor="@android:color/white"
            android:layout_marginRight="5dp"
            android:text="@string/app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="@string/copy_rigth"
                android:textColor="@color/white" />
            <TextView
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="@string/copy_rigth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:indeterminate="true"
                android:indeterminateTint="@android:color/white" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/IVlogo"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/sidert_logo_white" />

                    <TextView
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="18dp"
                        android:textColor="@android:color/white"
                        android:text="Descargando informaciÃ³n, esto puede demorar varios minutos favor de no interrumpir la descargar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:textColor="@android:color/white"
                                android:text="Impresiones"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <CheckBox
                                android:id="@+id/cbImpresiones"
                                android:buttonTint="@android:color/white"
                                android:enabled="false"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:textColor="@android:color/white"
                                android:text="Geolocalizaciones"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <CheckBox
                                android:id="@+id/cbGeolocalizaciones"
                                android:buttonTint="@android:color/white"
                                android:enabled="false"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:textColor="@android:color/white"
                                android:text="Cartera"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <CheckBox
                                android:id="@+id/cbCartera"
                                android:buttonTint="@android:color/white"
                                android:enabled="false"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:textColor="@android:color/white"
                                android:text="Total Registradas"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvRegistradas"
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:textColor="@android:color/white"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:textColor="@android:color/white"
                                android:text="/"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvTotal"
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:textColor="@android:color/white"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
        </RelativeLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
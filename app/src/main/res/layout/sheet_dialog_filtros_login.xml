<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!--  Fecha de inicio de sesión  -->
    <LinearLayout
        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/blue_sidert"
            android:text="Fecha de inicio de sesión"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvFecha"
            android:gravity="center_vertical"
            android:hint="Fecha de incio de sesión"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:background="@drawable/et_rounded_edges"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height" />

    </LinearLayout>

    <!--  Región  -->
    <LinearLayout
        android:id="@+id/llRegion"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/blue_sidert"
            android:text="Región"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRegion"
            android:hint="Región"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_drop_down"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:background="@drawable/et_rounded_edges"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height" />

    </LinearLayout>

    <!--  Sucursal  -->
    <LinearLayout
        android:id="@+id/llSucursal"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/blue_sidert"
            android:text="Sucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSucursal"
            android:hint="Sucursal"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_drop_down"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:background="@drawable/et_rounded_edges"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height" />

    </LinearLayout>

    <!--  Asesor/Gestor  -->
    <LinearLayout
        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/blue_sidert"
            android:text="Asesor/Gestor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAsesorGestor"
            android:hint="Asesor/Gestor"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_drop_down"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:background="@drawable/et_rounded_edges"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@+id/aetAsesor"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnBorrarFiltros"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_rounded_yellow"
            android:text="Borrar Filtros"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>
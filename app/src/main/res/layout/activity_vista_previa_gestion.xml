                    android:id="@+id/ivEvidencia"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <TextView
                    android:id="@+id/Firma"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"

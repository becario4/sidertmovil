                    android:paddingBottom="3dp"
                    android:background="@drawable/et_rounded_edges" />
                <TextView
                    android:id="@+id/tvSaldoActual"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/balance_cutting"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etSaldoActual"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:enabled="false"
                    android:ems="10"
                    android:drawableStart="@drawable/ic_money"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/et_rounded_edges" />
                <TextView
                    android:id="@+id/tvSaldoCorte"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/current_balance"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etSaldoCorte"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:enabled="false"
                    android:ems="10"
                    android:drawableStart="@drawable/ic_money"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/et_rounded_edges" />
                <TextView
                    android:id="@+id/tvFolioRecibo"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_sidert"
                    android:text="@string/folio_recibo"
                    android:focusable="false"
                    android:textSize="@dimen/labelsize"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etFolioRecibo"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:enabled="false"
                    android:ems="10"
                    android:paddingLeft="10dp"

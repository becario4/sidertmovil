<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:id="@+id/llDatosBeneficiario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:orientation="vertical"
        >

        <TextView
            android:textColor="@android:color/black"
            android:text="Nombre(s)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txtNombreBeneficiario"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textCapCharacters"
            android:textColor="@drawable/edit_text_selector"
            android:background="@drawable/et_rounded_edges"
            android:maxLength="80"
            android:paddingLeft="10dp"
            />

        <TextView
            android:textColor="@android:color/black"
            android:text="Apellido Paterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <EditText
            android:id="@+id/txtApellidoPaternoBeneficiario"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textCapCharacters"
            android:textColor="@drawable/edit_text_selector"
            android:background="@drawable/et_rounded_edges"
            android:maxLength="80"
            android:paddingLeft="10dp"
            />

        <TextView
            android:textColor="@android:color/black"
            android:text="Apellido Materno"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

        <EditText
            android:id="@+id/txtApellidoMaternoBeneficiario"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textCapCharacters"
            android:textColor="@drawable/edit_text_selector"
            android:background="@drawable/et_rounded_edges"
            android:maxLength="80"
            android:paddingLeft="10dp"
            tools:text="LOREM IMPSUM"
            />

        <TextView
            android:textColor="@android:color/black"
            android:text="Parentesco"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

        <TextView
            android:textSize="18.1sp"
            android:paddingTop="5dp"
            android:id="@+id/txtParentezcoBeneficiario"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@drawable/edit_text_selector"
            android:background="@drawable/et_rounded_edges"
            android:maxLength="80"
            android:paddingLeft="10dp"
            tools:text="LOREM IMPSUM"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRegresarBeneficiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_regresar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnContinuarBeneficiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_continuar" />
    </RelativeLayout>


</LinearLayout>